<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: #749C75;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">
   <bottom>
      <Button fx:id="backButton" mnemonicParsing="false" style="-fx-background-color: #6A5D7B; -fx-border-color: black; -fx-background-radius: 100; -fx-border-radius: 100;" text="Back" textFill="WHITE" BorderPane.alignment="CENTER">
         <font>
            <Font size="31.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="100.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
   <top>
      <Label fx:id="instructionsTitle" text="Instructions" textFill="WHITE" BorderPane.alignment="CENTER">
         <font>
            <Font size="87.0" />
         </font>
         <BorderPane.margin>
            <Insets top="100.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="40.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="1. Create Preset using the green plus button at the bottom right of page" textFill="WHITE">
               <font>
                  <Font size="56.0" />
               </font>
            </Label>
            <Label text="2. Drag and Drop presets into the animation view in the middle of screen" textFill="WHITE">
               <font>
                  <Font size="56.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane prefHeight="850.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.physiplay.controllers.PolygonVisualizerController">
   <content>
      <VBox>
         <children>
            <Canvas fx:id="polygonCanvas" height="800.0" width="800.0" />
            <HBox alignment="CENTER" spacing="20.0">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
               <padding>
                  <Insets top="10.0" />
               </padding>
               <children>
                  <Button fx:id="generatePolygonButton" mnemonicParsing="false" text="Generate polygon" />
                  <Button fx:id="getPositionsData" mnemonicParsing="false" onAction="#getPositions" text="Get positions data" />
                  <Button fx:id="clearAllButton" mnemonicParsing="false" text="Clear All" />
               </children>
            </HBox>
            <TextArea fx:id="positionsTextArea" prefHeight="200.0" prefWidth="200.0" />
         </children>
      </VBox>
   </content>
</ScrollPane>
